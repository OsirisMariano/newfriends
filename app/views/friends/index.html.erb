<h1>Friend List</h1>

<table class="table table-striped">
  <thead class="table-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">First Name</th> <!-- Atualize o nome da coluna -->
    <th scope="col">Last Name</th>  <!-- Atualize o nome da coluna -->
    <th scope="col">Email</th>      <!-- Atualize o nome da coluna -->
    <th scope="col">Phone</th>      <!-- Atualize o nome da coluna -->
    <th scope="col">Twitter</th>    <!-- Atualize o nome da coluna -->
    <th scope="col">Actions</th>
    <th scope="col">User Id</th>
  </tr>
  </thead>
  <tbody>
  <% @friends.each_with_index do |friend, index| %>
    <% if friend.user == current_user %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td>
          <%= link_to "Show", friend, class: "btn btn-info" %>
          <%= link_to "Edit", friend, class: "btn btn-info" %>
          <%= link_to "Destroy", friend, class: "btn btn-info" %>

        </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-success" %>
